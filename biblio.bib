doi = {10.1103/PhysRevB.55.3285},
file = {:home/andres/Documentos/Mendeley Desktop/1997/Physical Review B/Isotope effects on the optical phonons of YBa2Cu3O7 Eigenvector and infrared charge determination - Henn et al.pdf:pdf},
