file = {:home/andres/Documentos/Mendeley Desktop/2007/Journal of Superconductivity and Novel Magnetism/Effect of Uniaxial Pressure on the Isotope Effect on the Spectrum of Hamiltonians with Electron–Phonon Coupling - Miranda Mena, Mustr.pdf:pdf},
issn = {1557-1939},
journal = {Journal of Superconductivity and Novel Magnetism},
keywords = {isotopic effect,polaron,uniaxial pressure},
month = sep,
number = {7-8},
pages = {603--608},
title = {{Effect of Uniaxial Pressure on the Isotope Effect on the Spectrum of Hamiltonians with Electron–Phonon Coupling}},
